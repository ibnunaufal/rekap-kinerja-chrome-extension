{
  "manifest_version": 3,
  "name": "Rekap E-Kinerja",
  "version": "1.0",
  "description": "Capture the daily performance report from e-Kinerja and download it as an Excel file.",
  "permissions": ["activeTab", "scripting", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]

}
